{
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "lib": ["ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "ES2020"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "rootDir": "./",
    "skipLibCheck": true,
    "target": "es2020",
    "watch": false,
    "outDir": "./dist"
  },
  "typeRoots": ["node_modules/@graal-types", "@yam-js"],
  "include": ["src/**/*", "../../node_modules/@graal-types"]
}
