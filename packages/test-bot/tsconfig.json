{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "target": "ESNext",
    "outDir": "dist",
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true
  },
  "include": ["src/**/*"]
}
